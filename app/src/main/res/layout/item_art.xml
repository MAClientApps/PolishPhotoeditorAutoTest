<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:background="?attr/selectableItemBackground" android:layout_width="80dp" android:layout_height="90dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/art_1"/>

    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/selectedBorder"
        android:background="@drawable/blue_border"
        android:visibility="gone"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
