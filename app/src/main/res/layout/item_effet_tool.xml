<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RippleStyleWhite"
    android:layout_width="90dp"
    android:layout_height="90dp">

    <RelativeLayout
        android:id="@+id/linear_layout_wrapper_adjust"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_view_adjust_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="12dp"
            android:background="@drawable/background_circle_adjust"
            android:src="@drawable/ic_outline_edit"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text_view_adjust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_adjust_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font"
            android:textSize="10sp"
            android:text="Paint"
            android:textColor="@color/white"/>

    </RelativeLayout>

</com.balysv.materialripple.MaterialRippleLayout>